{
    "compilerOptions": {
      "target": "ES2020",
      "module": "CommonJS",
      "moduleResolution": "node",
      "outDir": "./dist",
      "baseUrl": "./src",
      "esModuleInterop": true,
      "declaration": true,
      "sourceMap": true,
      "allowJs": true,
      "strict": true,
      "skipLibCheck": true
    },
    "include": ["src/**/*.ts", "src/models/users.models.js", "src/models/conn.models.js"],
    "exclude": ["node_modules", "dist"]
}